<div class="container">
  <p id="notice"><%= notice %></p>
  
  <table class="highlight responsive">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.title %></td>
          <td><%= link.description %></td>
          <td><%= link_to 'Voir', link, class: "btn waves-effect waves-light" %></td>
          <td><%= link_to 'Editer', edit_link_path(link), class: "btn waves-effect waves-light blue" %></td>
          <td><%= link_to 'Supprimer', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect waves-light red" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>